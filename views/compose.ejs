<%- include('partials/header') -%>

    <div class="container">
        <h1>
            <%=heading%>
        </h1>
        <form action="/compose" method="post">
            <label for="composetitle">Title : </label>

            <input type="text" name="blogtitle" autocomplete="off" id="composetitle" placeholder="blogtitle">
            <label for="blogcontent">Blog : </label>

            <textarea name="blog" cols="30" rows="6" name="blogcontent" placeholder="write something :)"
                id="blogcontent"></textarea>
            <input type="submit" value="Publish" id="publishbtn">
        </form>
    </div>
    <%- include('partials/footer') -%>